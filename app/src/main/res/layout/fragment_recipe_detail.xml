<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow_12dp" />

            <!-- Title
            android:text="Recipe Details"-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Recipe Name -->
        <TextView
            android:id="@+id/recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Calories -->
        <TextView
            android:id="@+id/recipeCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:layout_marginTop="8dp" />

        <!-- Cook Time -->
        <TextView
            android:id="@+id/recipeCookTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cook Time"
            android:layout_marginTop="8dp" />

        <!-- Submission Time -->
        <TextView
            android:id="@+id/recipeSubmissionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted on"
            android:textStyle="italic"
            android:layout_marginTop="8dp" />

        <!-- Difficulty Level -->
        <TextView
            android:id="@+id/difficultyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:layout_marginTop="8dp" />

        <!-- Ingredients -->
        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:layout_marginTop="16dp" />

        <!-- Steps -->
        <TextView
            android:id="@+id/recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:layout_marginTop="16dp" />

        <!-- Edit Recipe Button -->
        <Button
            android:id="@+id/editRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Recipe"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <!-- Delete Recipe Button -->
        <Button
            android:id="@+id/deleteRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Recipe"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />


    </LinearLayout>
</ScrollView>
