<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Close Button (X) at the Top Right -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/button_close"
        android:contentDescription="Cameraclose"/>

    <!-- Camera Preview Space -->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="#000000" />

    <!-- Button Row at the Bottom for Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Rotate Camera Button -->
        <ImageButton
            android:id="@+id/rotate_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_flip"
            android:contentDescription="Rotatecamera"/>

        <!-- Capture Image Button -->
        <ImageButton
            android:id="@+id/capture_image_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cam_shutter_button"
            android:contentDescription="ImageCapture"/>

        <!-- Upload from Gallery Button -->
        <Button
            android:id="@+id/upload_from_gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:layout_marginStart="24dp" />
    </LinearLayout>

</RelativeLayout>
