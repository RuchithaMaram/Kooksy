<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.LoginPage">

    <TextView
        android:id="@+id/Loginheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="30sp"
        />

    <ImageView
        android:id="@+id/loginpageimage"
        android:layout_width="300sp"
        android:layout_height="220sp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Loginheader"
        android:layout_marginTop="20sp"
        android:src="@drawable/loginpage" />

    <TextView
        android:id="@+id/loginemail"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:text="@string/email"
        android:layout_marginLeft="50sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpageimage"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/loginemailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="48sp"
        app:layout_constraintTop_toBottomOf="@id/loginemail"
        />


    <TextView
        android:id="@+id/loginpwdtext"
        android:layout_width="90sp"
        android:layout_height="30sp"
        android:text="@string/password"
        android:layout_marginLeft="50sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginemail"
        android:layout_marginTop="50sp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="48sp"
        app:layout_constraintTop_toBottomOf="@id/loginpwdtext"
        />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginpassword"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/loginforgotpage"
        android:layout_width="154dp"
        android:layout_height="39dp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="25sp"
        android:ems="10"
        android:inputType="text"
        android:text="Forgot Password?"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginbutton" />


    <TextView
        android:id="@+id/loginneedaccountques"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:text="Need to create an account?"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginforgotpage" />

    <TextView
        android:id="@+id/loginsignup"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24sp"
        android:ems="10"
        android:inputType="text"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/loginneedaccountques"
        app:layout_constraintTop_toBottomOf="@id/loginforgotpage" />
</androidx.constraintlayout.widget.ConstraintLayout>