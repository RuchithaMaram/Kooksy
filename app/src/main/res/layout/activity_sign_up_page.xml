<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signuppage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.SignUpPage">

    <TextView
        android:id="@+id/signinheader"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="85dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="171dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/signinusername"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:text="UserName"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/signinemail"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:text="Email"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="398dp" />

    <TextView
        android:id="@+id/signinpassword"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:text="Password"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="460dp" />

    <TextView
        android:id="@+id/signinconfirmpassword"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:text="Confirm Password"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/signinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="585dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:text="Already have an account?"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="660dp" />

    <EditText
        android:id="@+id/signuploginbutton"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:text="Login"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="657dp" />
</androidx.constraintlayout.widget.ConstraintLayout>