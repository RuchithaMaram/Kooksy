<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.LandingPage">

    <TextView
        android:id="@+id/landingpageheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kooksy"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        />
    <ImageView
        android:id="@+id/Landingpageimage"
        android:layout_width="250sp"
        android:layout_height="220sp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toBottomOf="@+id/landingpageheader"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/landingimagecontent"
        android:layout_width="200sp"
        android:layout_height="180sp"
        android:text="Its Cooking Time"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Landingpageimage"
        android:layout_marginTop="15sp"
        android:lineSpacingExtra="5sp"
        />

    <Button
        android:id="@+id/LandingLogin"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:text="@string/login"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landingimagecontent"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="603dp" />



    <Button
        android:id="@+id/landingsignup"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:text="@string/sign_up"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LandingLogin"
        android:layout_marginTop="5sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>